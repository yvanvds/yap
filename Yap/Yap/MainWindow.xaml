<Window x:Class="Yap.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:yap="clr-namespace:YapView;assembly=YapView"
        xmlns:local="clr-namespace:Yap"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1000">
    <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="200"/>
    </Grid.RowDefinitions>
    <yap:YapView Grid.Row="0" x:Name="yap"/>

    <TextBox Grid.Row="1" x:Name="log" IsEnabled="False" TextWrapping="Wrap" VerticalScrollBarVisibility="Visible"/>

  </Grid>
</Window>
